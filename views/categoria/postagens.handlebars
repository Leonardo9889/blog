<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-4 shadow-lg p-3 mb-5 bg-white rounded">
  <div class="card-body">
    <h3>Titulo: {{titulo}}</h3>
    <p>Descrição: {{descricao}}</p>
    <a href="/postagem/{{slug}}"><button class="btn btn-info mt-2 ">Leia mais</button></a>
    <hr> 
    <small>Data de ciação: {{data}}</small>
  </div>
</div>
{{else}}
  <h4 class="mt-3 alert alert-primary" role="alert">Nenhum post encontrado</h4>
{{/each}}