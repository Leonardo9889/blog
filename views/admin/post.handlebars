<h1>Listar postagens:</h1>
<hr>
<a href="/admin/post/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4 shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <h4>Nome: {{titulo}}</h4>
            <h5>Descrição: {{descricao}}</h5>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <small>Data: {{data}}</small>
            <br>
            <a href="/admin/post/edit/{{_id}}"><button class="btn btn-info mt-4">Editar</button></a>
                <form action="/admin/post/delete" class="float-right" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button class="btn btn-danger mt-2">Deletar</button>
                </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3 alert alert-primary" role="alert">Nenhum post encontrado</h4>
{{/each}}