<h1>Lista de categorias:</h1>
<hr>
<a href="/admin/categoria/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4 shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body"> 
            <h4>Nome: {{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data: {{date}}</small>
            <br>
            <a href="/admin/categoria/edit/{{_id}}"><button class="btn btn-info mt-4">Editar</button></a>
                <form action="/admin/categoria/delete" method="POST" class="float-right">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button class="btn btn-danger mt-2 ">Deletar</button>
                </form>
        </div>      
    </div>
{{else}}
    <h4 class="mt-3 alert alert-primary" role="alert">Nenhum registro encontrado</h4>
{{/each}}
